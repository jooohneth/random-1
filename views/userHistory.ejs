<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User History</title>
    <link href="/css/main.css" rel="stylesheet" />
  </head>
  <body>
    <%- include("partials/navbar", { page: "/userHistory" }) %>

    <div class="container mx-auto p-4">
      <div class="min-h-32 mb-10">
        <div class="hero bg-base-300 p-12 shadow-lg rounded-lg">
          <div class="hero-content text-center">
            <div
              class="max-w-md flex flex-col justify-center items-center gap-4"
            >
              <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
              <p class="py-6">User History: <%= session.user.email %></p>
            </div>
          </div>
        </div>
      </div>

      <table class="table table-zebra">
        <thead>
          <tr>
            <th>Login Date/Time</th>
            <th>Client Information</th>
          </tr>
        </thead>
        <tbody>
          <% session.user.loginHistory.forEach(login => { %>
          <tr>
            <td><%= login.dateTime %></td>
            <td><%= login.userAgent %></td>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
